<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:layout_height="match_parent"
    tools:context=".view.QuestionFragment">

    <TextView
        android:id="@+id/id_question_time"
        android:layout_width="336dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="1 вопрос"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        
        android:id="@+id/id_question_question"
        android:background="#09a6e0"
        android:layout_marginTop="130dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text=""
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/id_question_answer1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#09a6e0"
            android:gravity="center"
            android:text="мяч пересечет линию ворот"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="150dp"
            android:id="@+id/id_question_answer2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="мяч пересечет линию ворот"
            android:background="#09a6e0"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="100dp">

        <TextView
            android:layout_width="150dp"
            android:id="@+id/id_question_answer3"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#09a6e0"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/id_question_answer4"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#09a6e0"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="350dp"
        android:id="@+id/id_question_button_next"
        android:text="ответить"
        android:background="#09a6e0"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center" />






</LinearLayout>